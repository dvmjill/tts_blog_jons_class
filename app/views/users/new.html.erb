<h1>Let's get you set up as a Blogger!!!</h1>


<%= render 'partials/errors' %>

<%= form_for @user do |f| %>

  <%=f.label :username %>
  <%=f.text_field :username %><br>

  <%=f.label :password %>
  <%=f.text_field :password%><br><br>
  <%=f.submit %>

<% end %>

  <%= link_to 'Go to Your Main Blog Dashboard', user_path(:id) %>
